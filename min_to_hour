#include <stdio.h>
struct time{
    float min,hour;
};
struct time t;

void min_to_hour(void){
    t.hour= t.min / 60.0f;
    printf("%.2f Hours", t.hour);
}
void hour_to_min(void){
    t.min=t.hour * 60.0f;
    printf("%.2f", t.min);
}

int main(void){
    int op;
    printf("---Time Converter---\n");
    printf("1)Hour To minutes\n");
    printf("2)Minutes To Hours\n");
    printf("--------------------\n");
    printf("Select An Option:\n");
    scanf("%i", &op);

    switch(op){
        
    case 1: 
    
        printf("----Hours To Minutes----\n");
        printf("Enter The Amount of hours:\n");
        scanf("%f",& t.hour);
        hour_to_min();
        break;

    case 2:
        printf("----Minutes To Hours----\n");
        printf("Enter the Amount of minutes:\n");
        scanf("%f",& t.min);
        min_to_hour();
        break;
    
    default:
        printf("Invaliid Operation!!");
        break;
}
return 0;
}
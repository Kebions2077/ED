{
    "version": "2.0.0",
    "tasks": [
        { "type": "shell",
    "label": "build C",
    "command": "${workspaceFolder}\\validate_and_debug.bat",
    "args": [
        "${file}",
        "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
    ],
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "problemMatcher": ["$gcc"],
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true,
        "echo": true
    },
    "detail": "Compilador GCC com validação"
        },
        {
            "type": "shell",
            "label": "build C Release",
            "command": "C:\\gcc\\bin\\gcc.exe",
            "args": [
                "-O2",
                "-std=c17",
                "-Wall",
                "${file}",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compilador GCC otimizado para release"
        },
        {
            "type": "shell",
            "label": "build C with Math Library",
            "command": "C:\\gcc\\bin\\gcc.exe",
            "args": [
                "-g",
                "-std=c17",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compilador GCC com biblioteca matemática"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\gcc\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}